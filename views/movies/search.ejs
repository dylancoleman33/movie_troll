  <body>

    <div class="container">
      <h1> Search for a movie</h1> <hr>
      <input id="movie-search" type="text" placeholder="find movie">
      <button id="search-button" class="btn btn-primary">Search</button>

      <div id="results">
        <div id="poster"></div>
        <div id="caption"></div>
      </div>
    </div>
    <form id="submit-form" action="/movies" method="POST">
      <button id="save-button" class="btn btn-success">Save Post</button>
    </form>

    <script src="/js/app.js"></script>
  </body>
</html>
